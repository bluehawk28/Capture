<!-- Gallery New Page -->
<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center";>Add a New Capture</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/gallery" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="caption" placeholder="Caption This Capture.">
                </div>
               <div class="form-group">
                    <a href="/gallery/location" class="btn btn-lg btn-primary btn-block">Add Location</a>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form> 
                <a href="/gallery">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>