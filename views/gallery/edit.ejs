<!-- Gallery Edit Page -->
<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center";>Edit Your Capture</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/gallery/<%= gallery.id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= gallery.image %>" name="gallery[image]" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= gallery.caption %>" name="gallery[caption]" placeholder="Caption This Capture.">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= gallery.location %>" name="gallery[location]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form> 
                <a href="/gallery">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>